{
    "name": "tg/tgwebvalid",
    "license": "MIT",
    "description": "This library performs Telegram user authentication via web app and login widget",
    "keywords": [
        "tgwebvalid",
        "telegram",
        "telegram auth",
        "telegram login",
        "telegram initData",
        "initData",
