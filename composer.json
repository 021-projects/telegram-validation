{
    "name": "tg/tgwebvalid",
    "license": "MIT",
    "description": "An easy way to validate Telegram Login Widget and Telegram Mini App users on your website using PHP",
    "keywords": [
        "telegram",
        "authentication",
        "authorization",
        "login",
        "auth",
        "webapp",
        "validation",
        "verification"
    ],
    "homepage": "https://tgwebvalid.com/en/",
    "support": {
        "issues": "https://github.com/CrazyTapok-bit/tgWebValid/issues",
        "source": "https://github.com/CrazyTapok-bit/tgWebValid",
        "forum": "https://github.com/CrazyTapok-bit/tgWebValid/discussions"
    },
    "authors": [
        {
            "name": "Сергій Засадинський",
            "email": "main.profile.mail@gmail.com"
        }
    ],
    "scripts": {
        "test": "phpunit --colors=always",
        "analyze": "phpstan analyze --ansi"
    },
    "require": {
        "php": "^8.1|^8.2|^8.3",
        "nesbot/carbon": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "TelegramWebApp\\Validation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TelegramWebApp\\Validation\\Tests\\": "tests/"
        }
    }
}
