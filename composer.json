{
    "name": "tg/tgwebvalid",
    "license": "MIT",
    "description": "Бібліотека TgWebValid призначена для перевірки достовірності даних, які надходять від користувачів Telegram WebApp та Telegram Login Widget",
    "keywords": ["tgwebvalid"],
    "support": {
        "issues": "https://github.com/CrazyTapok-bit/tgWebValid/issues",
        "source": "https://github.com/CrazyTapok-bit/tgWebValid"
    },
    "authors": [
        {
            "name": "Сергій Засадинський",
            "email": "main.profile.mail@gmail.com"
        }
    ],
    "scripts": {
        "test": "phpunit --colors=always"
    },
    "require": {
        "php": ">= 8.0.2"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "TgWebValid\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TgWebValid\\Test\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    }
}
